.widget
  margin: 0 0 40px 0

  .widget__title
    @extend $widget__title
    margin: 0 0 10px 0

  .widget__element
    padding: 30px 15px
    border-bottom: 1px solid #dde2e7
    &:last-child
      border none

  .widget__element-img
    width: 82px
    height: 82px
    margin 0 auto 27px auto
    border-radius 50%
    overflow hidden

    img
      width 100%
      height 100%
      display block
      object-fit cover

  .widget__element-title
    font-size fun-px-to-rem(18px)
    font-weight: 400
    font-family 'Playfair Display', serif
    color #1a1a1a
    line-height 1.2
    text-align center
    margin: 15px 0

  .widget__element-date
    font-size fun-px-to-rem(12px)
    font-weight 500
    text-transform uppercase
    line-height 1.2
    text-align center
    color: #b0b0b0
    margin: 15px 0 10px 0

  .widget__box
    margin 40px 0 0 0
    overflow hidden

  .widget__instagram-img
    float left
    width fun-width-interest(120,270)
    margin-bottom 30px
    border-radius 3px
    overflow hidden
    cursor pointer
    &:nth-child(odd)
      margin-right 30px

    img
      display block
      width 100%
      height 100px
      object-fit cover
      transform scale(1)
      transition transform 6s
      &:hover
        transform scale(1.3)